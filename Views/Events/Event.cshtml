@{
    ViewData["Title"] = "Event";
}
@model Event


<div class="row">
    <div class="col-6">
        <h1 class="monospace">
            @Model.Name 
        </h1>
        <p class="subtitle">
            ID:  @Model.Id
        </p>
        <p class="subtitle">
            Category:  @Model.Category
        </p>
        <div class="row">
            <div class="d-flex justify-content-around flex-wrap">
                <div class="card mb-5" style="width: 18rem;">
                    <div class="card-body h-auto" style="height: 20rem;">
                        <p class="card-text">@Model.Description</p>
                    </div>
                </div>
            </div>
        </div>
        <h3 class="my-2">
            <a asp-area="" asp-controller="Events" asp-action="update" asp-route-id="@Model.Id">
                <button type="button" class="btn btn-danger btn-lg">Edit</button>
            </a>
            <a asp-area="" asp-controller="Events" asp-action="delete" asp-route-id="@Model.Id">
                <button type="button" class="btn btn-danger btn-lg">Delete</button>
            </a>
        </h3>
    </div>
    <div class="col-6">
        <img src="@Model.Image" alt="Venue Image" />
    </div>
</div>






